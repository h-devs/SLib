<sapp>
	<layout
		type='page'
		background='white'
		fontSize='6%sw'
		>

		<linear
			width='fill'
			margin='1%sw'
			centerVertical='true'
			>

			<label
				text='Phone Call App'
				fontSize='10%sw'
				centerHorizontal='true'
				/>
			<switch
				name='switchSetDefault'
				text='Set as Default App'
				width='80%sw'
				padding='2%sw'
				marginTop='10%sw'
				centerHorizontal='true'
				/>
			<switch
				name='switchSystemOverlay'
				text='System Overlay'
				width='80%sw'
				padding='2%sw'
				marginTop='1%sw'
				centerHorizontal='true'
				/>

			<edit
				name='txtPhoneNumber'
				width='60%'
				centerHorizontal='true'
				marginTop='10%sw'
				keyboard='phone'
				/>

			<hlinear
				centerHorizontal='true'
				marginTop='2%sw'
				>
				<select
					name='selectSIM'
					width='50%sw'
					centerVertical='true'
					fontSize='4%sw'
					>
					<item selected='true'>Default</item>
				</select>
				<button
					style='button'
					name='btnCall'
					text='Call'
					marginLeft='5%sw'
					centerVertical='true'
					/>
			</hlinear>


			<label
				name='lblTime'
				text='00:00/00:00'
				marginTop='2%sw'
				centerHorizontal='true'
				/>

			<hlinear
				centerHorizontal='true'
				marginTop='2%sw'
				>
				<button
					style='button'
					name='btnRecord'
					text='Record'
					marginLeft='5%sw'
					visible='false'
					/>
				<button
					style='button'
					name='btnPlay'
					text='Play'
					marginLeft='5%sw'
					visible='false'
					/>
				<button
					style='button'
					name='btnStop'
					text='Stop'
					marginLeft='5%sw'
					visible='false'
					/>
			</hlinear>

			<linear
				name='groupCall'
				width='fill'
				marginTop='5%sw'
				visible='false'
				>
				<label
					name='lblCallInfo'
					width='60%'
					centerHorizontal='true'
					marginTop='5%sw'
					text='Info'
					/>

				<hlinear
					centerHorizontal='true'
					marginTop='2%sw'
					>
					<button
						style='button'
						name='btnAnswer'
						text='Answer'
						/>
					<button
						style='button'
						name='btnEndCall'
						text='End call'
						marginLeft='5%sw'
						/>
				</hlinear>
			</linear>

		</linear>

 	</layout>

	<style
		name='button'
		background='white'
		boundRadius='3%sw'
		width='25%sw'
		shadowOpacity='0.5'
		shadowRadius='1.3%sw'
		textColor='black'
		/>

</sapp>